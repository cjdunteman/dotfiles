" Sets how many lines of history VIM has to rememver
set history=500

" Enable syntax highlighting
syntax enable

" Use spaces instead of tabs
set expandtab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

" Auto indent
set ai

" Smart indent
set si

" Wrap lines
set wrap

" Highlight search results
set hlsearch

" Show matching brackets when text indicator is over them
set showmatch
